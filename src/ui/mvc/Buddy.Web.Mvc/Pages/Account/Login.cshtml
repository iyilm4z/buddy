@page
@model Buddy.Web.Pages.Account.LoginModel
<div class="d-flex justify-content-md-center align-items-center" style="height: 80vh!important;">
    <div class="login-box">
        <div class="card">
            <div class="card-body login-card-body">
                <h4 class="text-center mb-3">Log In</h4>
                <form asp-route="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group row required">
                        <div class="col-lg-12">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Username" asp-for="ViewModel.Username">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="ViewModel.Username"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-lg-12">
                            <div class="input-group">
                                <input type="password" class="form-control" placeholder="Password" asp-for="ViewModel.Password">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="ViewModel.Password"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-8">
                            <div class="form-check d-inline">
                                <input type="checkbox" class="form-check-input mt-2" asp-for="ViewModel.RememberMe"/>
                                <label asp-for="ViewModel.RememberMe">Remember Me?</label>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>